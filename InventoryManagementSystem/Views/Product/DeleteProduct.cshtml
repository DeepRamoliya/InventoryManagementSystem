@model InventoryManagementSystem.Models.Product

@{
    ViewBag.Title = "DeleteProduct";
}

<h2>DeleteProduct</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_Name)
        </dd>

        <dt>
            @Html.DisplayName("Product Quntity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_Quntity)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "DisplayProduct","Product",new {@class="btn btn-primary" })
        </div>
    }
</div>
