@model InventoryManagementSystem.Models.Purchase

@{
    ViewBag.Title = "PurchaseDetail";
}

<h2>PurchaseDetail</h2>

<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_Product)
        </dd>

        <dt>
            @Html.DisplayName("Product Quntity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_Quntity)
        </dd>

        <dt>
            @Html.DisplayName("Purchase Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_date)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id },new { @class="btn btn-primary"}) |
    @Html.ActionLink("Cancel", "DisplayPurchase","Purchase",new {@class="btn btn-danger"})
</p>
