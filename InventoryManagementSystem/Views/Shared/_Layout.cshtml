<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link rel="icon" href="~/favicon.ico" />


    <style>


        .navbar {
            overflow: hidden;
            background-color: teal !important;
            font-family: Arial, Helvetica, sans-serif;
            padding: 5px 0 0 5px;
        }

            .navbar a {
                float: left;
                font-size: 16px;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

        li:hover a {
            background-color: #4ecdc4 !important;
            border-radius: 10px;
        }

        ul li a {
            color: white !important;
        }

        .active {
            background-color: #4ecdc4;
            border-radius: 10px;
        }
    </style>
    <script>

        $(document).ready(function () {
            $('.navbar-nav').find('[href="' + window.location.pathname + '"]').parent().addClass('active')
        });
    </script>
</head>
<body>
    <div class="navbar  navbar-fixed-top bg-secondary">
        <div class="container-fluid " style="padding-left: 110px;">
            <div class="navbar-header">
                <div class="logo">
                    <a href="@Url.Action( "Index","Home")">
                        <img src="~/Content/themes/base/images/IMS.png" width="80" />
                    </a>
                </div>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="addactive">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Products", "DisplayProduct", "Product")
                    </li>
                    <li>
                        @Html.ActionLink("Purchase Product", "DisplayPurchase", "Purchase")
                    </li>
                    <li>
                        @Html.ActionLink("Sale Product", "DisplaySale", "Sale")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - All Rights Reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>*