@model IEnumerable<InventoryManagementSystem.Models.Sale>

@{
    ViewBag.Title = "DisplaySale";
}

<h2>Display Sale</h2>

<p>
    @Html.ActionLink("Create New", "SaleProduct", "Sale",null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Sale Product")
        </th>
        <th>
            @Html.DisplayName("Sale Quntity")
        </th>
        <th>
            @Html.DisplayName("Sale Date")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sale_Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sale_Quntity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sale_date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Sale", new { id = item.id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "SaleDetail", "Sale", new { id = item.id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", "Sale", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>